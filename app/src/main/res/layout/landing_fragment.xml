<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".SignIn.LandingPage">

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="50dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/landing_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/there_only_beer_left_foreground" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_horizontal|top"
            android:text="Bem vindo ao OneBeer, seu aplicativo que auxlia na compra de sua cerveja. Temos diversas opções para o seu gosto."
            android:textColor="@color/highlight_text_gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/primary_green"
            android:fontFamily="@font/inter_medium"
            android:text="Sign Up"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@id/textview_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>