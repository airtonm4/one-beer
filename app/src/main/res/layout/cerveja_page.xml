<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:buttonGravity="center_vertical"
        style="@style/Widget.AppCompat.Toolbar"
        app:title="Cerveja"
        app:titleTextColor="@color/black" />

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imageView_cerveja"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/baden_ipa"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"



    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nome do Produto"
    android:fontFamily="@font/inter_bold"
    android:textSize="24dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="39dp"
    ></TextView>

    <TextView
        android:id="@+id/text_cerveja"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/lorem_ipsum_teste"
        android:textColor="@color/highlight_text_gray"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:id="@+id/preco_cerveja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="R$ 30,00"
        android:layout_marginTop="34dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
      />

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"


        app:strokeColor="#B9A6A6"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                app:srcCompat="@drawable/remove_24"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="1"

                android:layout_gravity="center_vertical"/>
            <ImageView
                app:srcCompat="@drawable/add_24"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/button_adicionar"
        android:layout_width="249dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/primary_green"
        android:fontFamily="@font/inter_medium"
        android:text="Adicionar   preÃ§o"
        android:textSize="19sp"
        android:layout_marginStart="15dp"
        />

</LinearLayout>