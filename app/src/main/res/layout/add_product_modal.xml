<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textnomec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        />

    <EditText
        android:id="@+id/textnomeh"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_stroke"
        android:fontFamily="@font/inter_medium"
        android:hint="Insira o nome da cerveja"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="textStart"
        android:textColorHint="#989898"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textprecon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        />

    <EditText
        android:id="@+id/textprecoh"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_stroke"
        android:fontFamily="@font/inter_medium"
        android:hint="Insira o preço da cerveja"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="textStart"
        android:textColorHint="#989898"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textdesn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        />

    <EditText
        android:id="@+id/textdesh"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_stroke"
        android:fontFamily="@font/inter_medium"
        android:hint="Insira a descrição da cerveja"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="textStart"
        android:textColorHint="#989898"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textquaml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade em ML"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        />

    <EditText
        android:id="@+id/quantmlh"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_stroke"
        android:fontFamily="@font/inter_medium"
        android:hint="Insira quantos ML tem a cerveja"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="textStart"
        android:textColorHint="#989898"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textestilon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estilo"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_bold"
        />

    <EditText
        android:id="@+id/textestiloh"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_stroke"
        android:fontFamily="@font/inter_medium"
        android:hint="Insira o estilo da cerveja"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="textStart"
        android:textColorHint="#989898"
        android:textSize="18sp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button_adcionar_imagem"
            android:layout_width="249dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/primary_green"
            android:fontFamily="@font/inter_medium"
            android:text="Adicionar imagens"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <ImageView
            android:id="@+id/beer_carousel_image_carrinho"
            android:layout_width="80dp"
            android:layout_height="90dp"


            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/baden_ipa_foreground" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>